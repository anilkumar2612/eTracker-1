@model A11_RBS.Domain.Visitors

@{
    ViewBag.Title = "Create";
}

<style>
    .form-group{
       
    }
    .control-label{
        font-weight:bolder;
        font-size:15px;
    }
    .text-box{
        width:200px;
    }
</style>
<h2 class="btn btn-primary" style="margin-bottom: 20px; margin-left: 270px;">Interview Candidate Registration</h2>


@using (Html.BeginForm("Create","Visitor"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("First Name", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.FirstName)
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Last Name", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.LastName)
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Father Name", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.FatherName)
                            @Html.ValidationMessageFor(model => model.FatherName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Phone Number", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Phone)
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Email", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Highest Qualification", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Qualification)
                            @Html.ValidationMessageFor(model => model.Qualification)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Stream, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Stream)
                            @Html.ValidationMessageFor(model => model.Stream)
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Address)
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Technical Skills", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Skills)
                            @Html.ValidationMessageFor(model => model.Skills)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Experience", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                                 @Html.DropDownList("Experience", "Choose one")
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Current CTC", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.CurrentCTC)
                            @Html.ValidationMessageFor(model => model.CurrentCTC)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("How soon you can Join", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.DropDownList("ExpectedJoining", "Choose one")
                        </div>
                    </div>
                        
                    <div class="form-group">
                        @Html.Label("How Do You Know About Us", new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            <!--
                Html.EnumDropDownListFor(model => model.KnowaboutUse)
                Html.ValidationMessageFor(model => model.KnowaboutUse)-->
                            @Html.DropDownList("KnowaboutUse", "Choose one")
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-7">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>
        </div>
    </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
